  \ifACOV@coverpage
    \typeout{atlascover: telling atlasdoc we want a cover page}
    \ADOC@coverpagetrue
  \fi
  \relax%
\else
  % Define macros that are needed here and usually defined in atlasdoc
  \typeout{atlascover: ATLAS cover called standalone}
\fi

